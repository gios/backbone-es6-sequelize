<div class="container">
  <div class="row">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="input-name" class="col-md-offset-2 col-md-2 col-sm-3 control-label">Username</label>
        <div class="col-md-5 col-sm-6">
          <input type="name" class="form-control" id="input-name" placeholder="Username">
        </div>
      </div>
      <div class="form-group">
        <label for="input-password" class="col-md-offset-2 col-md-2 col-sm-3 control-label">Password</label>
        <div class="col-md-5 col-sm-6">
          <input type="password" class="form-control" id="input-password" placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4  col-sm-offset-3 col-md-5 col-sm-6">
          <div class="checkbox">
            <label>
              <input type="checkbox">Remember me</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4 col-sm-offset-3 col-md-5 col-sm-6">
          <button id="sign-in" class="btn btn-default">Sign in</button>
        </div>
      </div>
    </form>
  </div>
</div>
